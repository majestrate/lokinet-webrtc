{
  "name": "lokinet-webrtc",
  "version": "0.0.2",
  "description": "lokinet webrtc shim jizz",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "demo": "npm start",
    "dist:linux": "rm -rf release && electron-builder --linux appimage -p never",
    "dist:win32": "rm -rf release && electron-builder --windows portable -p never",
    "dist:" "rm -rf release && electron-builder -p never",
    "dist": "npm run dist:$BUILD_TARGET",
    "format": "for f in *.js ; do js-beautify -r -f $f ; done"
  },
  "author": "jeff",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "js-beautify": "^1.14.0"
  },
  "dependencies": {
    "liblokinet": "file:external/liblokinet-ffi",
    "ws": "^8.0.0"
  },
  "build": {
    "appId": "com.electron.lokinet.webrtc",
    "directories": {
      "output": "release/"
    },
    "buildDependenciesFromSource": true,
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {},
    "files": [
      "*.html",
      "*.css",
      "*.js",
      "*.svg",
      "contrib/bootstrap.signed"
    ]
  }
}
