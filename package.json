{
  "name": "lokinet-webrtc",
  "version": "0.0.1",
  "description": "lokinet webrtc shim jizz",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "demo": "npm start",
    "dist": "rm -rf release; electron-builder",
    "linux": "rm -rf release; electron-builder --linux",
    "win32": "rm -rf release; electron-builder --windows portable"
  },
  "author": "jeff",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "liblokinet": "file:external/liblokinet-ffi"
  },
  "dependencies": {
    "liblokinet": "file:external/liblokinet-ffi",
    "ws": "^8.0.0"
  },
  "build": {
    "appId": "com.electron.lokinet.webrtc",
    "directories": {
      "output": "release/"
    },
    "buildDependenciesFromSource": true,
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {},
    "files": [
      "*.html",
      "*.css",
      "*.js"
    ],
    "extraResources" : [
      {
        "from": "contrib/bootstrap.signed",
        "to": "bootstrap.signed"
      }
    ]
  }
}
